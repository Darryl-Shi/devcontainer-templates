{
  "name": "python",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "forwardPorts": [8888, 5000, 8000],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "ms-python.black-formatter"
      ]
    }
  },
  "postCreateCommand": "python3 -c 'import sys, numpy, pandas; print(sys.version); print(numpy.__version__, pandas.__version__)'",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true
}

